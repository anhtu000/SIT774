            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script>
        //use leaflet library to embed map
        //create a leaflet map and set a starting view point for the map
        const map = L.map("map").setView([-37.8136, 144.9631], 13); 
        //declare the map tiles, add to the created map
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", 
        {
            attribution: "Â© OpenStreetMap"
        }).addTo(map);
        //create a marker for Our location and add to the map
        L.marker([-37.8136, 144.9631])
            .addTo(map)
            .bindPopup("Our location")
            .openPopup();
        //alert when click add to cart
        function CartAlert()
        {
            alert("Product has been added to your cart");
        }
    </script>
</body>
</html>