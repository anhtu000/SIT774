<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .stickyheader
        {
            /* add sticky header*/
            position: sticky;
            /* position the sticky header to be on top of the viewport*/
            top: 0;
            /* add padding for the header*/
            padding: 10px 16px;
            /* Make sure the heading will be on top of other content when scrolling*/
            z-index: 100;
        }
        .product-card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            background-color: white;
            overflow: visible;
            position: relative;
            min-height: 250px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .thumbnail-placeholder {
            height: 120px;
            background-color: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            border-bottom: 1px solid #dee2e6;
        }
        .product-details {
            padding: 10px;
            text-align: center;
        }
        .thumbnail-container {
            position: relative;
            width: 100%;
            height: 200px;
            overflow: visible;
            display: flex;
            align-items: center; 
            justify-content: center;
        }

        .thumbnail-container .thumbnail {
            width: 100%;
            height: 100%;
            object-fit: contain;
            cursor: zoom-in;
        }

        .zoomed-img {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%); 

            width: 300px;
            height: 300px;

            background: white;
            border: 1px solid #ccc;
            z-index: 999;

            display: none;
            pointer-events: none; 
        }

        .zoomed-img img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    </style>
</head>
<body>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasCategory" aria-labelledby="offcanvasCategoryLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasCategoryLabel">Product Category</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group">
                <li class="list-group-item"><a href="/DProject_ProductList">Mobile Phone</a></li>
                <li class="list-group-item">Laptop</li>
                <li class="list-group-item">TV</li>
                <li class="list-group-item">Accessories</li>
            </ul>
        </div>
    </div>
    <header class="navbar navbar-expand-lg bg-light border-bottom stickyheader">
        <div class="container-fluid">
            <button class="btn btn-outline-primary me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasCategory" aria-controls="offcanvasCategory">
                <span class="navbar-toggler-icon"></span>
                Products
            </button>
            <a class="navbar-brand me-5" href="/"><img src="https://images.unsplash.com/photo-1763929272741-56e50999033f?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDZ8fHJhbmRvbSUyMGxvZ298ZW58MHx8MHx8fDA%3D" height="40" width="40" alt="logo"></a>
            <form class="d-flex flex-grow-1 me-3" role="search" method="POST" action="/DProject_ProductList">
                <input class="form-control me-2" type="search" placeholder="Search bar" aria-label="Search" name="search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <div class="d-flex me-2">
                <% if (user) { %>
                    <span class="navbar-text me-2">
                        <strong><%= user.username %></strong>
                    </span>
                    <form method="POST" action="/logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/DProject_Login" class="btn btn-outline-secondary">Login / Signup</a>
                <% } %>
            </div>
            <div class="d-flex me-2">
                <a href="/DProject_Cart" class="btn btn-outline-primary">Cart</a>
            </div>
        </div>
    </header>
    <main class="container-fluid mt-4">
        <section class="row mb-4">
            <div class="col-md-4">
                <select class="form-select">
                    <option selected>Filter dropdown</option>
                    <option>Option 1</option>
                    <option>Option 2</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100">Quick filter</button>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100">Quick filter</button>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100">Quick filter</button>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100">Quick filter</button>
            </div>
        </section>
        <section class="row mb-5">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-5">
                        <div class="product-card">
                            
                            <div class="thumbnail-container">
                                <img
                                    src="<%= product.prd_image %>"
                                    class="thumbnail"
                                    alt="<%= product.prd_name %>"
                                >

                                <!-- zoom image -->
                                <div class="zoomed-img">
                                    <img src="<%= product.prd_image %>" alt="">
                                </div>
                            </div>

                            <div class="product-details">
                                <div>
                                    <a href="/DProject_ProductDetail/<%= product.id %>"
                                    class="fs-5 fw-bold text-decoration-none">
                                        <%= product.prd_name %>
                                    </a>
                                </div>
                                <div>
                                    <p class="mb-1 text-muted">
                                        <%= product.prd_description %>
                                    </p>
                                </div>
                                <div class="text-success fs-4 fw-semibold">
                                    $<%= product.prd_price %>
                                </div>
                                <button class="bg-success text-white mt-2 btn"
                                        onclick="addToCart(<%= product.id %>)">
                                    Add to cart
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center text-muted fs-5">
                    No products found.
                </div>
            <% } %>
        </section>
        <div class="d-flex justify-content-center">
            <nav aria-label="ProductList">
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script>
        // show zoom picture when hover 
        //select all the elements with the mentioned class into a const
        const containers = document.querySelectorAll(".thumbnail-container");

        containers.forEach(function (container) {

            const zoom = container.querySelector(".zoomed-img");

            container.addEventListener("mouseenter", function () {
                zoom.style.display = "block";
            });

            container.addEventListener("mouseleave", function () {
                zoom.style.display = "none";
            });

        });
        
        // Add to cart function
        async function addToCart(productId) {
            <% if (!user) { %>
                alert("Please login first to add items to cart");
                window.location.href = "/DProject_Login";
                return;
            <% } %>

            const response = await fetch('/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    product_id: productId
                })
            });

            const data = await response.json();

            if (data.success) {
                alert(data.message);
            } else {
                alert(data.message || 'Failed to add to cart');
            }
        }
    </script>
</body>
</html>
